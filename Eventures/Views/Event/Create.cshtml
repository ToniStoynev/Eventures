@model Eventures.Models.BindingModels.CreateEventBindingModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-3">Register</h1>

<form method="post" class="mx-auto w-50">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr class=" mt-3 bg-eventures hr2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.Name" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.Name" class="form-control" type="text" placeholder="Name" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.Place" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.Place" class="form-control" type="text" placeholder="Place" />
            <span asp-validation-for="@Model.Place" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.Start" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.Start" class="form-control" type="datetime-local" placeholder="Start" />
            <span asp-validation-for="@Model.Start" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.End" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.End" class="form-control" type="datetime-local" placeholder="End" />
            <span asp-validation-for="@Model.End" class="text-danger"></span>
        </div>
    </div>

    <hr class=" mt-3 bg-eventures hr2" />

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.TotalTickets" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.TotalTickets" class="form-control" type="number" placeholder="Total tickets" />
            <span asp-validation-for="@Model.TotalTickets" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.PricePerTicket" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.PricePerTicket" class="form-control" type="text" placeholder="Last name" />
            <span asp-validation-for="@Model.PricePerTicket" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex my-3 justify-content-between">
        <button type="submit" class="btn text-dark font-weight-bold mx-auto bg-eventures">Create Event</button>
    </div>
</form>

